{
  "name": "The Vault Extension",
  "version": "1.0",
  "description": "Passwords Keeper",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs",
    "input",
    "management",
    "storage",
    "*://*/*", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{

////    "matches": ["http://*/*", "https://*/*"],
////    "matches": ["http://*/*", "https://*/*"],
////    "exclude_matches": ["chrome://*/*"],
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_popup": "index.html",
        "default_icon": {
          "32": "assets/icons/vault.png"
        }
  }
}
